{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",          // ensure JSX in .tsx files is handled
    "baseUrl": "./",                // base path for imports
    "paths": {
      "@/*": ["WearaboutsExpo/*"]   // match your project structure
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
